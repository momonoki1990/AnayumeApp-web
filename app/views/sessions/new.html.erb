<div class="container text-white login">
  <h3 class="text-center">ログイン</h3>
  <div class="row">
    <div class="mx-auto w-75">
      <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, "メールアドレス", class: 'mt-3' %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "パスワード", class: 'mt-2' %>
      <%= f.password_field :password, class: 'form-control' %>

      <div class="space-between mt-2">
        <%= f.label :remember_me, class: "form-check-label" do %>
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <span>ログイン状態を保持する</span>
        <% end %>

        <%= f.submit "送信", class: "btn btn-primary transparent_blue" %>
      </div>
      <% end %>

      <p>
        <%= link_to "パスワードをお忘れですか？ ", new_password_reset_path %>
        <br class="brsp">
        <%= link_to "-アカウント作成", signup_path %>
      </p>
    </div>
  </div>
</div>