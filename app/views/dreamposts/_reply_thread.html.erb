<span class="reply-thread">
  <a href="#" data-toggle="modal" data-target="#reply-thread-<%= dreampost.id %>">  
    スレッドを表示
  </a>
  <div class="modal" id="reply-thread-<%= dreampost.id %>" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">    
          <p class="modal-title" id="exampleModalLabel">
          </p>
          <button type="button" class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <section class="thread-reply-to">
            <%= render 'dreamposts/thread_reply_to', dreampost: dreampost %>
          </section>
          <section class="thread-reply-from">
            <%= render 'dreamposts/reply_to', dreampost: dreampost %>
          </section>

          


        </div>
        
      </div>
    </div>
  </div>
</span>