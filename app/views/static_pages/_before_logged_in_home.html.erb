<%= form_for(:session, url: login_path) do |f| %>        
        <div class="row mt-3 easy-login">
          <div class="col-5">
            <div class="form-group">            
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, class: 'form-control' %>          
            </div>
          </div>
          <div class="col-5">
            <div class="form-group">            
              <%= f.label :password, "パスワード" %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>  
          </div>
          <div class="col-2 align-self-end">
            <div class="form-group btn-group-sm">        
              <%= f.submit "ログイン", class: 'btn btn-primary' %>
            </div>
          </div>
        </div>        
      <% end %>
      <div class="mb-area w-80 pl-5">
      <div class="message-area mt-5">
        <h4>あなたの夢をことばにしよう</h4>
        <div class="text-box pl-2">
          <p class="mt-4 lead">あなたの夢を記録しよう</p>
          <p class="mt-3 lead">みんなの夢を見てみよう</p>
          <p class="mt-3 lead">夢を膨らませよう</p>
        </div>
      </div>
      <div class="btn-area text-center mt-5">  
      <div class="form-group">      
          <%= link_to "新規登録", signup_path, class: 'btn btn-primary w-100' %>
          <%= link_to "ログイン", login_path, class: 'btn btn-primary w-100 mt-2' %>
          <%= render 'sessions/guest_login' %>
      </div>
      </div>
      </div>
    