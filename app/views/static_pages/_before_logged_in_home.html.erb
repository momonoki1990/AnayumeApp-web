<%= form_for(:session, url: login_path) do |f| %>        
        <div class="row mt-3 w-80">
          <div class="col-5">
            <div class="form-group">            
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, class: 'form-control' %>          
            </div>
          </div>
          <div class="col-5">
            <div class="form-group">            
              <%= f.label :password, "パスワード" %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>  
          </div>
          <div class="col-2 align-self-end">
            <div class="form-group">        
              <%= f.submit "ログイン", class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>

      <div class="message-area mt-5">
        <h3>あなたの夢はなんですか？</h3>
        <div class="text-box pl-5">
          <p class="mt-5 lead">あなたの夢をことばに残そう</p>
          <p class="mt-3 lead">みんなの夢を見てみよう</p>
          <p class="mt-3 lead">夢を膨らませよう</p>
        </div>
      </div>
      <div class="btn-area text-center mt-5">        
          <%= link_to "新規登録", signup_path, class: 'btn btn-primary w-50' %>
          <%= link_to "ログイン", login_path, class: 'btn btn-primary w-50' %>        
      </div>
    </div>