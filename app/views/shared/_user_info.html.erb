<div class="row user-info">
  <div class="col-4 pr-0">
    <%= render 'shared/user_img', user: @user %>
  </div>
  <div class="col-7 offset-1">
    <div class="prof-name h3">
      <%= link_to @user.name, @user %>
    </div>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section class="follow-form">
      <%= render 'users/follow_form' if logged_in? %>
    </section>
  </div>
</div>