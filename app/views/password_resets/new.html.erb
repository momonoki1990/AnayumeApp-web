<div class="container password_reset">
  <h2 class="text-center">パスワードの再設定</h2>
  <div class="row">
    <div class="mx-auto w-75">
      <%= form_for(:password_reset, url: password_resets_path) do |f| %>

      <%= f.label :email, "メールアドレス", class: 'mt-3' %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit "送信", class: "btn btn-yellow btn-small btn-small btn-small btn-small btn-small btn-small mt-2 float-right" %>
      <% end %>
      <div class="clear"></div>
    </div>
  </div>
</div>