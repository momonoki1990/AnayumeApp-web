<div id="user-<%= user.id %>" class="card position-relative">
    <div class="row">
    <div class="col-2 pt-1 pr-0">
    <a href="<%= user_path(@user.id) %>" class="prof-img">
      <% if user.picture? %>
        <%= image_tag user.picture.url %>
      <% else %>
        <%= image_tag 'NHM06uRh_400x400.jpg' %>
      <% end %>
    </a>
    </div>
    <div class="col-10 position-static">
    <div class="post-info">
        <span class="user">
          <%= link_to user.name, user_path(user) %>
        </span>
        <span class="follow-form">          
            <span id="follow_form">
              <% if current_user.following?(user) %>
                <%= form_for(current_user.active_relationships.find_by(followed_id: user.id),
                  html: { method: :delete }) do |f| %>
                  <%= f.submit "フォロー解除", class: "btn btn-secondary mt-0" %>
                <% end %>
              <% else %>
                <%= form_for(current_user.active_relationships.build) do |f| %>
                  <span><%= hidden_field_tag :followed_id, user.id %></span>
                  <%= f.submit "フォロー", class: "btn btn-primary mt-0" %>
                <% end %>
              <% end %>
            </span>
          
        </span>      
    </div>    
    
    <div class="card-body">            
      <div class="card-text">        
        <section class="user-profile">
          
            <%= user.profile %>
          
        </section>
      </div>
    </div>        
    </div>
  </div>
</div>