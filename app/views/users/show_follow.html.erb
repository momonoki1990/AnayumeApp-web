<div class="container text-white show-follow">
<div class="row">
<div class="col-md-6">
<section class="user_info mt-5">
<h1 class="prof-name"><%= @user.name %></h1>
</section>
<section class="stats">
<%= render 'shared/stats' %>
</section>
<%= render 'follow_form' if logged_in? %>
</div>
<div class="col-md-6 mt">
<h4><%= @title %></h4>
<% if @users.any? %>
<div class="show-follows jscroll">
<%= render @users %>
<%= paginate @users %>
</div>

<% end %>
</div>
</div>
</div>