<div class="container show-follow">
  <div class="row">
    <div class="col-md-6">
      <div class="sticky">
        <section class="user-info mt-5 mb-2">
          <%= render 'shared/user_info' %>
        </section>
        <section class="user-profile">
          <%= render 'shared/user_profile' %>
        </section>
      </div>
    </div>
    <div class="col-md-6 mt">
      <h3><%= @title %></h3>
      <% if @users.any? %>
      <div class="show-follows jscroll">
        <%= render @users %>
        <%= paginate @users %>
      </div>
      <% end %>
    </div>
  </div>
</div>