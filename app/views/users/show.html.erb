<div class="container">
<div class="row">
<div class="col-md-4">
<section class="user_info">
  <%= render 'shared/user_info' %>
</section>
<section class="stats">
  <%= render 'shared/stats' %>
</section>
</div>
<div class="col-md-8">
<%= render 'follow_form' if logged_in? %>
<% if @user.dreamposts.any? %>
<h3>投稿(<%= @user.dreamposts.count %>)</h3>
<ol class="dreamposts">
<%= render @dreamposts %>
</ol>
<%= will_paginate @dreamposts %>
<% end %>
</div>
</div>
</div>